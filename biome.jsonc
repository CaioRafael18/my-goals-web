{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "useBlockStatements": "off",
        "noNestedTernary": "off"
      },
      "suspicious": {
        "noConsole": "off"
      },
      "performance": {
        "noImgElement": "off"
      }
    }
  }
}
